
@model IEnumerable<project_for_nothing_1.Models.Project>
@{
	ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

<p>
	<a asp-action = "Create" class="btn btn-primary">Create Project</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Created At</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach(var p in Model)
		{
			<tr>
				<td>@p.Name</td>
				<td>@p.Description</td>
				<td>@p.CreatedAt.ToShortDateString()</td>
				<td class="text-end">
					<a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Details</a>
					<a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-info btn-sm">Edit</a>
					<a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-info btn-sm">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>



