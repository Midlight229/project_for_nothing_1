@model IEnumerable<project_for_nothing_1.Models.Board>

@{
	ViewData["Title"] = "Boards";
	
}

<h2>Boards</h2>
<p>
	<a class="btn btn-primary" asp-action="Create">Create New Board</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Project</th>
			<th></th>
		</tr>
	</thead>


	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Project?.Name</td>
				<td class="text-end">
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
					<a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>