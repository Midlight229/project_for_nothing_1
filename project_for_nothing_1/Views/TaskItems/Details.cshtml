@model project_for_nothing_1.Models.TaskItem
@{
	ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>


<div class="card">
	<div class="card-body">

		<h4>@Model.Title</h4>

		<p class="text-muted">
			Column: <strong>@Model.Column?.Name</strong>
		</p>

		@if(!string.IsNullOrWhiteSpace(Model.Description))
		{
			<p>@Model.Description</p>
		}

		else
		{
			<p class="text-muted">No descripton</p>
		}

		<p>
			<strong>Priority:</strong>@Model.Priority
		</p>

		@if (Model.DueDate != null)
		{
			<p><strong>Due:</strong>@Model.DueDate?.ToString("dd MMM yyyy")</p>
		}

		@if (Model.Assignee != null)
		{
			<p><strong>Assigned to:</strong>@Model.Assignee.FullName</p>
		}


		<div class="mt-3">
			<a asp-controller="TaskItems"
				asp-action="Edit"
			asp-route-id="@Model.Id"
			class="btn btn-primary">
			Edit
			</a>

			<a asp-controller="TaskItems"
				asp-action="Delete"
			   asp-route-id="@Model.Id"
			   class="btn btn-danger">
				Delete
			</a>

			<a asp-controller="Boards"
				asp-action="Details"
			   asp-route-id="@Model.BoardId"
			   class="btn btn-secondary">
				Back to Board
			</a>
		</div>
	</div>
</div>